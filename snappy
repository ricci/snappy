#!/usr/bin/env python3

import sys
import snappylib.place as place
import snappylib.commands as commands
import snappylib.config as config

# XXX: should be in a config file
#place.Place("test", "/test")

# XXX Allow location to be passed on the command line
conf = config.loadINI()

if len(sys.argv) < 2:
    commands.usage.call(conf)
else:
    sys.argv.pop(0)
    commands.byname.get(sys.argv.pop(0), commands.usage).call(conf)
